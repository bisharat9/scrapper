@model emailsender.Models.Email

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SendEmail</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/style1.css" rel="stylesheet" type="text/css">
    <!-- //web font -->

</head>

<body>
    <div class="bg_img"></div>
    <div class="container">
        <div class="form_wrapper">
            <div class="form_container">
                <div class="title_container">
                    <h2>Email Sender</h2>
                </div>


                @using (Html.BeginForm("Index", "Email", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="row clearfix">
                        <div class="col_half">
                            <label>Import Emails</label>
                            <div class="input_field attachmentType">
                                <input type="file" name="EmailFile" required />
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col_half">
                            <label>Subject</label>
                            <div class="input_field">
                                <input type="text" name="Subject" required />
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col_half">
                            <label>Attachment</label>
                            <div class="input_field attachmentType ">
                                <input type="file"  name="file" required  />
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col_half">
                            <label>Message</label>
                            <div class="textarea_field">
                                <textarea cols="46" rows="3" name="Message"></textarea>
                            </div>
                        </div>
                    </div>
                    <input class="button" type="submit" value="Send" />

                }

                @if (@ViewBag.success != null)
                {
                    <div class="alert alert-success" role="alert">@ViewBag.Success</div>
                }
                @if (@ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert"> @ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</body>
</html>


